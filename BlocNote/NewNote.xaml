<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlocNote.NewNote"
             Title="NewNote"
             Shell.NavBarIsVisible="False">
    <Grid RowDefinitions="*,auto" ColumnDefinitions="*">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20" Padding="20,20,20,0">
                <Label Text="âž• Create note" FontSize="Large" HorizontalOptions="Center"></Label>
                <BoxView HeightRequest="3" BackgroundColor="#95be32" HorizontalOptions="FillAndExpand"/>
                <Label Text="ðŸ“” Title :" FontSize="Medium" ></Label>
                <Entry Text="{Binding NoteTitle}"
                    Placeholder="Title"
                ></Entry>

                <Label Text="ðŸ“ Text :" FontSize="Medium"></Label>
                <Editor Text="{Binding NoteText}"
                    Placeholder="Text"
                    AutoSize="TextChanges"
                ></Editor>

                <Grid ColumnDefinitions="auto,*" RowDefinitions="*" ColumnSpacing="20">
                    <Label Text="ðŸŽ¨ Select a color : " FontSize="Medium"></Label>
                    <Picker x:Name="picker"
                            Grid.Column="1"
                        ItemsSource="{Binding Mgr.ColorList}"
                        TextColor="{Binding Color}">
                    </Picker>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>

        <Button
            Grid.Row="1"
            Text="Create"
            BackgroundColor="#95be32"
            Clicked="AddNote"
            Margin="20"
            HorizontalOptions="FillAndExpand"
        />
    </Grid>
</ContentPage>
